<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#F5F8FA">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/user_image"
        android:textColor="#14171A"/>

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toStartOf="@+id/tvTimeStamp"
        app:layout_constraintStart_toEndOf="@+id/ivProfileImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="rpandey923"
        android:textColor="#14171A"/>

    <TextView
        android:id="@+id/tvTimeStamp"
        tools:text="7d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#14171A"/>

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/tvScreenName"
        tools:text="Hello this is my sample tweet"
        android:textColor="#14171A"
        android:autoLink="all" />

    <ImageView
        android:id="@+id/previewImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#14171A"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBody"
        tools:srcCompat="@tools:sample/avatars"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="#F5F8FA"
        android:clickable="true"
        android:contentDescription="@string/comment_button"
        android:focusable="true"
        android:outlineProvider="none"
        android:textColor="#14171A"
        app:backgroundTint="#F5F8FA"
        app:layout_constraintEnd_toStartOf="@+id/btnRetweet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previewImage"
        app:srcCompat="@drawable/ic_vector_compose" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnRetweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="#F5F8FA"
        android:clickable="true"
        android:contentDescription="@string/retweet_button"
        android:focusable="true"
        android:outlineProvider="none"
        android:textColor="#14171A"
        app:backgroundTint="#F5F8FA"
        app:layout_constraintEnd_toStartOf="@+id/tvRtCount"
        app:layout_constraintStart_toEndOf="@+id/btnComment"
        app:layout_constraintTop_toBottomOf="@+id/previewImage"
        app:srcCompat="@drawable/ic_vector_retweet_stroke" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="#F5F8FA"
        android:clickable="true"
        android:contentDescription="@string/like"
        android:focusable="true"
        android:outlineProvider="none"
        android:textColor="#14171A"
        app:backgroundTint="#F5F8FA"
        app:layout_constraintEnd_toStartOf="@+id/tvFavoriteCount"
        app:layout_constraintStart_toEndOf="@+id/tvRtCount"
        app:layout_constraintTop_toBottomOf="@+id/previewImage"
        app:srcCompat="@drawable/ic_vector_heart_stroke" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="#F5F8FA"
        android:clickable="true"
        android:contentDescription="@string/share_button"
        android:focusable="true"
        android:outlineProvider="none"
        android:textColor="#14171A"
        app:backgroundTint="#F5F8FA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvFavoriteCount"
        app:layout_constraintTop_toBottomOf="@+id/previewImage"
        app:srcCompat="@android:drawable/ic_menu_share" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E2E2E4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clCompose" />

    <TextView
        android:id="@+id/tvFavoriteCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/btnShare"
        app:layout_constraintStart_toEndOf="@+id/btnFavorite"
        app:layout_constraintTop_toBottomOf="@+id/previewImage"
        tools:text="8213" />

    <TextView
        android:id="@+id/tvRtCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/btnFavorite"
        app:layout_constraintStart_toEndOf="@+id/btnRetweet"
        app:layout_constraintTop_toBottomOf="@+id/previewImage"
        tools:text="8213" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCompose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnComment"
        tools:visibility="visible">

        <EditText
            android:id="@+id/etCompose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/what_s_happening"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:textColor="#14171A"
            android:visibility="visible"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnTweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tweet"
            android:textColor="#14171A"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCompose"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>